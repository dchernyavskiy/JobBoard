@model LoginViewModel
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <form asp-controller="Auth" asp-action="Login" method="post" class="card-body p-5 text-center">
                        <input type="hidden" asp-for="ReturnUrl" class="mt-3" />
                        <h3 class="mb-5">Sign in</h3>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="typeEmailX-2">Email</label>
                            <input asp-for="Email" type="email" id="typeEmailX-2" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="alert-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="typePasswordX-2">Password</label>
                            <input asp-for="Password" type="password" id="typePasswordX-2" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="alert-danger"></span>
                        </div>

                        <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>

                        <hr class="my-4">

                        <button asp-controller="Auth" asp-action="RegisterEmployer" asp-route-returnUrl="@Model.ReturnUrl" 
                                class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;"
                                type="submit">
                            <i class="fab fa-google me-2"></i> Sign Up As Employer
                        </button>
                        <button asp-controller="Auth" asp-action="RegisterEmployee" asp-route-returnUrl="@Model.ReturnUrl"
                            class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;"
                                type="submit">
                            <i class="fab fa-facebook-f me-2"></i> Sign Up As Employee
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

